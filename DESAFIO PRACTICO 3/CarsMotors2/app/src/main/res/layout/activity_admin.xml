<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        android:id="@+id/botonMarcas"
        android:text="Marcas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="irAMarcas"/>

    <Button
        android:id="@+id/botonColores"
        android:text="Colores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="irAColores"/>

    <Button
        android:id="@+id/botonTipos"
        android:text="Tipos de automóvil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="irATipos"/>
    <Button
        android:id="@+id/botonAutomovil"
        android:text="Automóvil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="irAAutomovil"/>
    <Button
        android:id="@+id/botonUsuario"
        android:text="Usuarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="irAUsuario"/>

</LinearLayout>